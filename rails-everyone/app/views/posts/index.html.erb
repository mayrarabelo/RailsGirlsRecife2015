
<% for post in @posts %>
	<article>
		<h2>
  		<%= post.title %>
  	</h2>
		<p>
		<%= raw post.summary %>
		</p>
		<a href="posts/<%= post.id %>">Leia mais</a>
		<p><%= post.author %>, <%= post.published_at %></p>
		<div class="tags">
			<% for tag in post.tags.split(",") %>
			<a href="#"><%= tag %></a>
			<% end %>
		</div>
	</article>
	<hr>
<% end %>
